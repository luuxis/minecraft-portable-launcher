{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Build release",
            "type": "cargo",
            "command": "build",
            "args": [
                "--release"
            ],
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "Run",
            "type": "cargo",
            "command": "run",
            "problemMatcher": [
                "$rustc"
            ]
        }
    ]
}